// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Source {
  id          String    @id @default(cuid())
  title       String
  url         String    @unique
  videoId     String    @unique
  transcript  String    @db.Text
  duration    Int       // seconds
  thumbnail   String?
  breakpoints String?   @db.Text  // JSON array of { timestamp: number, reason: string }
  sessions    Session[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Session {
  id        String    @id @default(cuid())
  viewerId  String    // Anonymous user ID from localStorage
  sourceId  String
  source    Source    @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  startTime Int       // seconds into video
  endTime   Int?      // null if still in progress
  status    String    @default("watching") // watching, challenging, completed
  problems  Problem[]
  note      Note?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([viewerId, sourceId])
}

model Problem {
  id          String   @id @default(cuid())
  sessionId   String
  session     Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  problemText String   @db.Text
  problemType String   // recall, multiple_choice, multi_select, matching, true_false, fill_blank, ordering, numeric_fill, worked_variant, conceptual_pitfall, challenge
  difficulty  String   @default("medium") // easy, medium, hard
  options     String?  @db.Text  // JSON: for MC/multi-select: string[], for matching: {columnA: string[], columnB: string[]}, for ordering: string[]
  solution    String?  @db.Text  // JSON: correct answer(s) - index, indices, boolean, or text depending on type
  userAnswer  String?  @db.Text  // JSON: user's answer in same format as solution
  isCorrect   Boolean?
  feedback    String?  @db.Text
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Note {
  id        String   @id @default(cuid())
  sessionId String   @unique
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
